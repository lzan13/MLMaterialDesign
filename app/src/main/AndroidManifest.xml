<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.melove.demo.design">

    <uses-permission android:name="android.permission.READ_USER_DICTIONARY" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MLTheme.Default">
        <activity
            android:name="net.melove.demo.design.activity.MLMainActivity"
            android:label="@string/app_name"
            android:theme="@style/MLTheme.Default">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.melove.demo.design.activity.MLSearchActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/MLTheme.Search">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".contentprovider.MLCPActivity"
            android:theme="@style/MLTheme.Default" />

        <provider
            android:name=".contentprovider.MLContentProvider"
            android:authorities="net.melove.demo.design.contentprovider" />

    </application>

</manifest>
