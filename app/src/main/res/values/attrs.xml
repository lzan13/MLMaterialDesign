<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义MLImageView的属性-->
    <declare-styleable name="MLImageView">
        <!--模糊半径-->
        <attr name="ml_blur_radius" format="integer"/>
        <!--模糊图片是缩放比例-->
        <attr name="ml_blur_scale" format="integer"/>
        <!--控件边框颜色-->
        <attr name="ml_border_color" format="color"/>
        <!--控件边框宽度-->
        <attr name="ml_border_width" format="dimension"/>
        <!--控件按下时颜色的透明度-->
        <attr name="ml_press_alpha" format="integer"/>
        <!--控件按下的颜色-->
        <attr name="ml_press_color" format="color"/>
        <!--控件圆角半径-->
        <attr name="ml_radius" format="dimension"/>
        <!--自定义控件的几种枚举样式 0 正常、1 圆形、2 矩形-->
        <attr name="ml_shape_type" format="enum">
            <enum name="normal" value="0"/>
            <enum name="round" value="1"/>
            <enum name="rectangle" value="2"/>
        </attr>
        <!--是否拦截触摸事件-->
        <attr name="ml_dispatch_touch_event" format="boolean"/>
    </declare-styleable>

    <!--自定义音频录制控件-->
    <declare-styleable name="MLRecordView">
        <!--触摸区域颜色-->
        <attr name="ml_touch_color" format="color"/>
        <!--触摸区域图标资源-->
        <attr name="ml_touch_icon" format="reference"/>
        <!--触摸区域半径-->
        <attr name="ml_touch_size" format="dimension"/>
        <!--触摸区域提示文字-->
        <attr name="ml_touch_text" format="string|reference"/>
        <!--波形刻度颜色-->
        <attr name="ml_waveform_color" format="color"/>
        <!--波形刻度间隔距离-->
        <attr name="ml_waveform_interval" format="dimension"/>
        <!--波形刻度宽度-->
        <attr name="ml_waveform_width" format="dimension"/>
        <!--录制指示器颜色-->
        <attr name="ml_indicator_color" format="color"/>
        <!--录制指示器大小-->
        <attr name="ml_indicator_size" format="dimension"/>
        <!--文字颜色-->
        <attr name="ml_text_color" format="color"/>
        <!--文字大小-->
        <attr name="ml_text_size" format="dimension"/>
    </declare-styleable>
</resources>